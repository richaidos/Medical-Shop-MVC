@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        
            <li class="nav-item">
                <a class="nav-link js-scroll-trigger" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-primary btn-xl js-scroll-trigger">Logout</button>
            </li>
        
    </form>
}
else
{
        <li class="nav-item">
               <a class="nav-link js-scroll-trigger" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
               <a class="nav-link js-scroll-trigger" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
}
